
@{
    ViewBag.Title = "ForgetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <link rel="stylesheet" type="text/css" href="~/Template/css/login-util.css">
    <link rel="stylesheet" type="text/css" href="~/Template/css/login-main.css">


    <div class="container-login100" style="background-image: url('../../Front/images/bg-01.jpg');">
        <div class="wrap-login100 p-l-55 p-r-55 p-t-80 p-b-30">
            <form class="login100-form validate-form">
                <span class="login100-form-title p-b-37">
                    Find your account!
                </span>
                <div class="wrap-input100 validate-input m-b-20" data-validate="Enter username">
                    <input class="input100" type="text" name="username" placeholder="username">
                    <span class="focus-input100"></span>
                </div>

                <div class="text-center">
                    @if (ViewBag.message != null)
                    {
                        <label style="font-size:15px;color:black;border-bottom:double;border-color:red">@ViewBag.message</label>
                    }
                </div>

                <div class="container-login100-form-btn">
                    <button class="login100-form-btn">
                        Search
                    </button>
                </div>

            </form>
        </div>
    </div>

    <script src="~/Template/js/jquery-3.2.1.min.js"></script>
    <!--===============================================================================================-->
    <script src="~/Template/js/login-main.js"></script>

}
