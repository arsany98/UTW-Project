<!DOCTYPE html>

<html dir="@(BusinessLayer.CultureManager.IsRightToLeft() ? "rtl" : "ltr")">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Stock Exchange Software</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Stock Exchange Software" />
    <meta name="keywords" content="stock, exchange, software" />
    <meta name="author" content="Stock Exchange Software" />
    
    <link rel="shortcut icon" href="favicon.ico">
    <link href="https://fonts.googleapis.com/css?family=Roboto+Mono:300,400" rel="stylesheet">

    <!-- Animate.css -->
    <link rel="stylesheet" href="~/Template/css/animate.css">
    <!-- Icomoon Icon Fonts-->
    <link rel="stylesheet" href="~/Template/css/icomoon.css">
    <!-- Simple Line Icons -->
    <link rel="stylesheet" href="~/Template/css/simple-line-icons.css">
    <!-- Bootstrap  -->
    @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "en")
    {
        <link rel="stylesheet" href="~/Template/css/bootstrap.css">
    }
    else
    {
        <link rel="stylesheet" href="~/Template/css/bootstrap-rtl.css">
    }

    <!-- Style -->
    <link rel="stylesheet" href="~/Template/css/style.css">

    <link rel="stylesheet" type="text/css" href="~/Template/fonts/font-awesome-4.7.0/css/font-awesome.min.css">

    <link rel="icon" type="image/png" href="~/Template/images/favicon.ico" />

    <link href="~/Template/Modifications.css" rel="stylesheet" />

    <!-- Modernizr JS -->
    <script src="~/Template/js/modernizr-2.6.2.min.js"></script>
    <!-- FOR IE9 below -->
    <!--[if lt IE 9]>
    <script src="~/Template/js/respond.min.js"></script>
    <![endif]-->
    @RenderSection("JavaScript", required: false)
</head>
<body>
    <header role="banner" id="fh5co-header">
        <div class="container">
            <div class="row">
                <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="navbar-header">
                        <!-- Mobile Toggle Menu Button -->
                        <a href="#" class="js-fh5co-nav-toggle fh5co-nav-toggle" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar"><i></i></a>
                        <a class="navbar-brand" href="@Url.Action("Dashboard", "Home")">Stock Exchange Software</a>
                    </div>
                    <div id="navbar" class="navbar-collapse collapse">
                        <ul class="nav navbar-nav navbar-right">
                            @if (Session["User"] != null)
                            {
                                DataAccessLayer.User user = Session["User"] as DataAccessLayer.User;
                                if (!user.Admin)
                                {
                                    <li><a class="external" href="@Url.Action("Dashboard", "Home")">@Resources.Resources.Dashboard</a></li>
                                    <li><a class="external" href="@Url.Action("Order", "Home")">@Resources.Resources.Order</a></li>
                                }
                                <li><a class="external" href="@Url.Action("Monitor", "Home")">@Resources.Resources.Monitor</a></li>
                                if (user.Admin)
                                {
                                    <li><a class="external" href="@Url.Action("Users", "Home")">@Resources.Resources.Users</a></li>
                                }
                                <li><a class="external" href="@Url.Action("Logout", "Home")">@Resources.Resources.Logout</a></li>
                            }
                            @if (System.Threading.Thread.CurrentThread.CurrentCulture.Name == "ar-EG")
                            {
                                <li><a class="external" href="@Url.Action("SetCulture", "Home", new { culture = "en" }, Request.Url.Scheme)">English</a></li>
                            }
                            else
                            {
                                <li><a class="external" href="@Url.Action("SetCulture", "Home", new { culture = "ar-EG" }, Request.Url.Scheme)">العربية</a></li>
                            }


                        </ul>
                    </div>
                </nav>
            </div>
        </div>
    </header>

    <br /><br />

    @RenderBody()

    <div style="width:100%;background-color:#41444B;text-align:center;padding-top:20px;padding-bottom:20px">
        <p class="copy-right">
            &copy; 2019 Stock Exchange Software. All Rights Reserved.
        </p>

    </div>

    <!-- jQuery -->
    <script src="~/Template/js/jquery.min.js"></script>
    <!-- jQuery Easing -->
    <script src="~/Template/js/jquery.easing.1.3.js"></script>
    <!-- Bootstrap -->
    <script src="~/Template/js/bootstrap.min.js"></script>
    <!-- Waypoints -->
    <script src="~/Template/js/jquery.waypoints.min.js"></script>
    <!-- Stellar Parallax -->
    <script src="~/Template/js/jquery.stellar.min.js"></script>
    <!-- Counters -->
    <script src="~/Template/js/jquery.countTo.js"></script>
    <!-- Main JS (Do not remove) -->
    <script src="~/Template/js/main.js"></script>
    <script src="~/Template/js/Popup.js"></script>
</body>
</html>
